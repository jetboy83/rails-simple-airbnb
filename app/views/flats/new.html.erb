  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">flat Details</h5>
        </div>
        <div class="card-body">
          <%= simple_form_for @flat, html: { class: 'form-horizontal' } do |f| %>
            <div class="form-group pb-2">
              <%= f.input :name, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
            </div>
            <div class="form-group pb-2">
              <%= f.input :address, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
            </div>
            <div class="form-group pb-2">
              <%= f.input :description, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'form-label' } %>
            </div>
            <div class="form-group pb-2">
              <%= f.input :price_per_night, input_html: { class: 'form-select' }, wrapper: false, label_html: { class: 'form-label' } %>
            </div>
            <div class="form-group pb-2">
              <%= f.input :number_of_guests, input_html: { class: 'form-select' }, wrapper: false, label_html: { class: 'form-label' } %>
            </div>
            <div class="form-group text-center">
              <%= f.button :submit, "Submit flat", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
